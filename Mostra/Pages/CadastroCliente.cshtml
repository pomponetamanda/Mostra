﻿
@page
@model IndexModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Império Feminino</title>
    <link rel="stylesheet" href="/css/cadastrocliente.css" />
</head>
<body>

    <div class="caixa2">
        <h2>CADASTRE-SE E CONSTRUA SEU SONHO:</h2>
        <br>
        <br>
        <form action="cadastro" method="post">
            <div class="form-group">
                <label for="Nome ">Nome:</label>
                <input type="text" name="Nome " placeholder="Nome" required>
            </div>
            <div class="form-group">
                <label for="Sobrenome">Sobrenome: </label>
                <input type="text" name="Sobrenome" placeholder="Sobrenome" required>
            </div>
            <div class="form-group">
                <label for="Número de Telefone">Número de Telefone: </label>
                <input type="tel" name="Telefone" placeholder="(xx) xxxxx-xxxx" required minlength="11" maxlength="11">
            </div>
            <div class="form-group">
                <label for="CEP">CEP: </label>
                <input type="int" name="CEP" placeholder="CEP" required minlength="8" maxlength="8">
            </div>
            <div class="form-group">
                <label for="E-mail">E-mail:</label>
                <input type="email" name="E-mail" placeholder="E-mail" required>
            </div>
            <div class="form-group">
                <label for="Senha">Senha: </label>
                <input type="password" name="Senha" placeholder="Senha" required>
            </div>

            <br>
            <br>
            <br>
            <ul class="button-group">
                <input class="form-check-input me-1" type="checkbox" value="" id="firstCheckbox" required>
                <label class="form-check-label" for="firstCheckbox">Para continuar, aceite os termos da nossa <a href="/Privacidade">Política de Privacidade</a> </label>
            </ul>

            <div class="entrar">
                <a href="/HomeCliente2"
                    <button>
                      <div class="txtbt"> Entrar </div>
                    </button>
                </a>
            </div>
            <br>
            <br>
        </form>
    </div>
    <br>

</body>

</html> 