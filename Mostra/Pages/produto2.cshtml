                <label for="quantidade">Quantidade:</label>
                <input type="number" id="quantidade" name="quantidade" min="1" value="1">
            </div>

            <div class="button-group">
                <button type="submit" class="btn add-to-cart">Adicionar ao Carrinho</button>
                <button type="button" class="btn buy-now">Comprar</button>
            </div>

            <section class="product-section">
                <div class="product">
                    <img src="~/imagens/joias.jpg" alt="Calça Flare com Botões Dourados">
                    <h2>Calça Flare com Botões Dourados</h2>
                    <p>19,99 €</p>
                    <button>Adicionar ao Carrinho</button>
                </div>
                <div class="product">
                    <img src="~/imagens/maryjanes.png" alt="Mini Bolsa Transversal">
                    <h2>Mini Bolsa Transversal</h2>
                    <p>17,99 €</p>
                    <button>Adicionar ao Carrinho</button>
                </div>
                <div class="product">
                    <img src="~/imagens/SAIAA.jpg" alt="Brincos Geométricos">
                    <h2>Brincos Geométricos</h2>
                    <p>6,99 €</p>
                    <button>Adicionar ao Carrinho</button>
                </div>
            </section>

            <!--  DESCRIÇÃO-->
            <div class="container">
                <div class="header">
                    <div class="ref">Ref 7252319</div>
                    <div class="copy">[] Copy</div>
                </div>
                <div class="description">
                    Fitted bandeau top with a fold-over neckline and contrast side stripes. Made of stretch fabric.
                </div>
                <div class="total-look">Total look</div>
                <div class="accordion">
                    <div class="accordion-item">
                        <input type="checkbox" id="item1">
                        <label class="accordion-label" for="item1">Composition and care</label>
                        <div class="accordion-content">
                            <p>Composition: 95% cotton, 5% elastane.</p>
