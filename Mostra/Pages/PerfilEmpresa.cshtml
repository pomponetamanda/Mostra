﻿
@page
@model IndexModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Império Feminino</title>
    <link rel="stylesheet" href="/css/perfil.css" />
</head>
<body>

    <main class="container9">

        <section class="container-acima">
            <div class="perfil">
                <img class="imagem" src="~/imagens/amani.jpg">
                <div class="ola">
                    <h2>Olá, Boutique Amani</h2>
                </div>
                <a href="/EditarPerfilEmpresa" class="editar">Editar Perfil</a>
            </div>
        </section>

        <section class="container-baixo">
            <h4 class="titulo">Gestão de Estoque</h4>
           
            <table>
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Preço</th>
                        <th>Ação</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>Produto A</td>
                        <td>50</td>
                        <td>R$ 20,00</td>
                        <td><button>Editar</button></td>
                    </tr>

                    <tr>
                        <td>Produto B</td>
                        <td>30</td>
                        <td>R$ 15,00</td>
                        <td><button>Editar</button></td>
                    </tr>  
                    
                    <tr>
                        <td>Produto C</td>
                        <td>30</td>
                        <td>R$ 15,00</td>
                        <td><button>Editar</button></td>
                    </tr>
                </tbody>
            </table>
            <button>Adicionar Produto</button>
        </section>


        <section class="container-baixo">
            <h4 class="titulo">Visualização de Pedidos</h4>

            <table>
                <thead>
                    <tr>
                        <th>ID do Pedido</th>
                        <th>Cliente</th>
                        <th>Status</th>
                        <th>Valor Total</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>#001</td>
                        <td>Cliente A</td>
                        <td>Enviado</td>
                        <td>R$ 100,00</td>
                    </tr>

                    <tr>
                        <td>#002</td>
                        <td>Cliente B</td>
                        <td>Pendente</td>
                        <td>R$ 50,00</td>
                    </tr>
                </tbody>
            </table>
            <button>Acessar Pedidos</button>
        </section>

        <section class="container-baixo">
            <h4>Relatórios</h4>
            <p>Relatórios de vendas, estoque e desempenho da loja serão exibidos aqui.</p>
            <button>Gerar Relatório</button>
        </section>

    </main>
</body>

</html> 